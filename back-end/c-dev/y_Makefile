CC = gcc
CFLAGS = -g -Wall

y_main: y_main.o y_lexer.o y_parser.o
	$(CC) -o y_main y_main.o y_lexer.o

y_main.o: y_main.c y_lexer.h
	$(CC) $(CFLAGS) -c y_main.c

y_lexer.o: y_lexer.c y_lexer.h
	$(CC) $(CFLAGS) -c y_lexer.c

y_parser.o: y_parser.c y_parser.h
	$(CC) $(CFLAGS) -c y_parser.c

clean:
	rm -f *.o
